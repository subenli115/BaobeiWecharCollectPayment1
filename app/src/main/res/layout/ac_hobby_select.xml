<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.ziran.meiliao.common.commonwidget.NormalTitleBar
        android:id="@+id/ntb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ntb_tv_left="showAndFinish" />

    <View style="@style/hor_match_line_8dp"
        android:layout_below="@+id/ntb"
        android:id="@+id/view"
        />
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:orientation="vertical">

        <com.ziran.meiliao.widget.ItemGroupView
            android:id="@+id/igv1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_common_height"
            app:itemView_leftText="音乐"
            android:background="@color/white"
            app:itemView_leftText_color="@color/textColor_333"
            app:itemView_rightTextSize="11sp"
            app:showBottomLine="true"
            app:showRightArrow="true" />

        <com.ziran.meiliao.widget.ItemGroupView
            android:id="@+id/igv2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_common_height"
            android:background="@color/white"
            app:itemView_leftText="运动"
            app:showBottomLine="true"
            app:itemView_leftText_color="@color/textColor_333"
            app:itemView_rightTextSize="11sp"
            app:showRightArrow="true" />
        <com.ziran.meiliao.widget.ItemGroupView
            android:id="@+id/igv3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_common_height"
            app:itemView_leftText="阅读"
            android:background="@color/white"
            app:itemView_leftText_color="@color/textColor_333"
            app:itemView_rightTextSize="11sp"
            app:showRightArrow="true" />
        <com.ziran.meiliao.widget.ItemGroupView
            android:id="@+id/igv4"
            android:layout_width="match_parent"
            app:itemView_leftText="影视"
            android:layout_height="@dimen/item_common_height"
            android:background="@color/white"
            app:itemView_leftText_color="@color/textColor_333"
            app:itemView_rightTextSize="11sp"
            app:showRightArrow="true" />
        <com.ziran.meiliao.widget.ItemGroupView
            android:id="@+id/igv5"
            android:layout_width="match_parent"
            app:itemView_leftText="游戏"
            android:layout_height="@dimen/item_common_height"
            android:background="@color/white"
            app:itemView_leftText_color="@color/textColor_333"
            app:itemView_rightTextSize="11sp"
            app:showRightArrow="true" />
        <com.ziran.meiliao.widget.ItemGroupView
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_common_height"
            android:background="@color/white"
            app:itemView_leftText="交友"
            app:itemView_leftText_color="@color/textColor_333"
            app:itemView_rightTextSize="11sp"
            app:showRightArrow="true" />

        <com.ziran.meiliao.widget.ItemGroupView
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_common_height"
            android:background="@color/white"
            android:visibility="gone"
            app:itemView_leftText_color="@color/textColor_333"
            app:itemView_rightTextSize="11sp"
            app:showRightArrow="true" />

    </LinearLayout>










</RelativeLayout>