<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#F7F8FA"
    android:layout_height="match_parent">

    <com.ziran.meiliao.common.commonwidget.NormalTitleBar
        android:id="@+id/ntb"
        android:layout_width="match_parent"
        app:ntb_tv_left="showAndFinish"
        app:ntb_title_text="提现"
        android:layout_height="wrap_content"/>
<ImageView
    android:id="@+id/iv_top"
    android:layout_width="235px"
    android:layout_height="235px"
    android:layout_below="@+id/ntb"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="51px"
    android:src="@mipmap/icon_capitalextract"
    />


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_below="@+id/iv_top"
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_margin="75px"
        android:background="@drawable/normal_bg_white_vertical"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/arl"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="72px"
            android:layout_height="wrap_content">


    <com.ziran.meiliao.widget.RoundImageView
        android:id="@+id/riv"
        android:layout_marginLeft="68px"
        android:layout_width="24px"
        android:layout_height="24px"
        android:layout_marginTop="6px"
        android:background="@drawable/normal_bg_bule"
        app:roun_type="circle"
        />
    <View
        android:id="@+id/view"
        android:layout_width="1px"
        android:layout_marginTop="5px"
        android:layout_below="@+id/riv"
        android:layerType="software"
        android:layout_marginLeft="79px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_dotted_line_vertical"
        android:layout_height="117px"/>

    <ImageView
        android:id="@+id/iv_time"
        android:layout_below="@+id/view"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_marginLeft="50px"
        android:src="@mipmap/icon_examine"
        />
            <View
                android:id="@+id/view1"
                android:layout_width="1px"
                android:layout_below="@+id/iv_time"
                android:layerType="software"
                android:layout_marginLeft="79px"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_dotted_line_vertical"
                android:layout_height="117px"/>

            <com.ziran.meiliao.widget.RoundImageView
                android:id="@+id/riv1"
                android:layout_marginLeft="68px"
                android:layout_width="24px"
                android:layout_below="@+id/view1"
                android:layout_height="24px"
                android:layout_marginTop="8px"
                android:background="@drawable/normal_bg_gray"
                app:roun_type="circle"
                />

        <TextView
            android:id="@+id/tv_center"
            android:layout_alignTop="@+id/iv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_time"
            android:text="审核中..."
            android:textSize="36px"
            android:layout_marginLeft="22px"
            android:textColor="#292832"
            />
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现申请已提交，1-5个工作日可到账
到账后您可以搭配支付宝中查询"
                android:layout_marginTop="10px"
                android:layout_below="@+id/tv_center"
                android:layout_alignLeft="@+id/tv_center"
                android:textSize="24px"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到账成功"
                android:layout_alignLeft="@+id/tv_content"
                android:layout_below="@+id/view1"
                />
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:textSize="26px"
                android:layout_marginLeft="37px"
                android:layout_toRightOf="@+id/riv"
                android:layout_height="wrap_content"
                android:text="提现申请"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_below="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="#B0AFB2"
                android:layout_marginTop="10px"
                android:layout_alignLeft="@+id/tv"
                android:text="2020/07/14 22:50:03"/>

        </com.zhy.autolayout.AutoRelativeLayout>
        
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/arl"
            android:layout_marginLeft="50px"
            android:layout_marginTop="61px"
            android:layout_marginRight="50px"
            android:background="#F0F0F0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额"
            android:layout_marginTop="61px"
            android:textColor="#606266"
            android:layout_marginLeft="50px"
            android:layout_below="@+id/view2"
            android:layout_marginBottom="65px"
            android:textSize="24px"
            />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1元"
            android:textColor="#F9636A"
            android:layout_marginRight="53px"
            android:textSize="30px"
            android:layout_marginTop="59px"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view2"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:id="@+id/tv_qd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="12dp"
        android:layout_below="@+id/bg"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="确定"
        android:gravity="center"
        android:background="@drawable/normal_bg_bule"
        />

</com.zhy.autolayout.AutoRelativeLayout>