<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent60"
              android:orientation="vertical"
    >

    <View
        android:id="@+id/touch_outside"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
<LinearLayout
    android:id="@+id/ll_headView"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_hint_head"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fafafa"
        />

</LinearLayout>
        <LinearLayout
            android:id="@+id/ll_headView2"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传视频"
                android:textColor="@color/black"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="14.5dp"
                android:text="请上传真实的本人视频介绍，不符合要求将无法通过"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fafafa"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_white_gray"
            android:gravity="center"
            android:text="修改头像"
            android:textColor="@color/textColor_333"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="#fafafa"
            />
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_common_height"
            android:background="@drawable/selector_white_gray"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/textColor_333"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>

