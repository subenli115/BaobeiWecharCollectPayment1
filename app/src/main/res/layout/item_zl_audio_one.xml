<?xml version="1.0" encoding="utf-8"?>

<com.zhy.autolayout.AutoRelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="35px"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.ziran.meiliao.widget.RoundImageView
        android:id="@+id/iv_head"
        android:layout_width="80px"
        android:layout_height="80px"
        app:layout_auto_baseheight="width"
        android:layout_marginLeft="33px"
        app:roun_type="circle"
        android:layout_toRightOf="@+id/jmui_return_btn"
        android:src="@mipmap/ic_launcher"
        />

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_alignTop="@+id/iv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/iv_head"
            android:maxLines="1"
            android:text="title"
            android:textColor="#787A80"
            android:textSize="28px" />
        <TextView

            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_marginTop="10px"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_item_title"
            android:textColor="#A8ABB3"
            android:textSize="26px"
            android:layout_below="@+id/tv_item_title"
            android:text="06-09 06:23"
            />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_item_title"
        android:text="dddddddddddd"
        android:layout_below="@+id/tv_time"
        android:textColor="#292832"
        android:layout_marginTop="20px"
        android:textSize="30px"
        />

    <TextView
    android:id="@+id/tv_report"
    android:layout_below="@+id/tv_content"
    android:layout_width="wrap_content"
    android:layout_alignLeft="@+id/tv_item_title"
    android:layout_height="wrap_content"
    android:text="举报"
        android:paddingRight="20px"
        android:paddingBottom="20px"
        android:paddingTop="20px"
    android:textSize="26px"
    android:textColor="#A8ABB3"
    />
    <TextView
        android:id="@+id/tv_delete"
        android:layout_below="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@+id/tv_item_title"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="删除"
        android:paddingRight="20px"
        android:paddingBottom="20px"
        android:paddingTop="20px"
        android:textSize="26px"
        android:textColor="#2E84E6"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/all_comment"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/tv_report"
        android:paddingLeft="2px"
        android:gravity="center_vertical"
        android:paddingRight="20px"
        android:paddingBottom="20px"
        android:paddingTop="20px"
        android:layout_alignTop="@+id/tv_report"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"
            android:textSize="26px"
            android:textColor="#2E84E6"
            android:drawablePadding="2dp"
                android:drawableRight="@mipmap/icon_home_bule_right"
            />



    </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
