<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_marginRight="7dp"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="25dp"
        android:gravity="center"
        android:id="@+id/all"
        android:background="@drawable/normal_bg_gray_fc"
        android:layout_height="25dp">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_auto_baseheight="width"
            android:src="@mipmap/icon_no_data_add"
            />

    </com.zhy.autolayout.AutoLinearLayout>
    <com.ziran.meiliao.common.commonwidget.RoundImageView
        android:id="@+id/iv"
        android:layout_width="25dp"
        android:scaleType="center"
        app:layout_auto_baseheight="width"
        android:layout_height="25dp"
        app:roundimageview_borderRadius="4dp"
        app:roundimageview_type="round"
        />
    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="25dp"
        android:visibility="gone"
        android:layout_height="25dp"
        android:background="@drawable/normal_bg_gray_4dff"
        />
    <ImageView
        android:id="@+id/iv_video"
        android:layout_centerInParent="true"
        android:layout_width="13dp"
        android:visibility="gone"
        android:layout_height="14dp"
        android:src="@mipmap/ic_boxing_play"
        />

</RelativeLayout>