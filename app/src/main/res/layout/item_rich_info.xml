<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/background_gradient_info"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36px"
        android:textColor="@color/white"
        android:text="丰富你的资料"
        android:layout_marginLeft="53px"
        android:layout_marginTop="40px"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="让大家看到你，搭讪的几率增加3倍"
        android:layout_below="@+id/tv_title"
        android:textSize="26px"
        android:layout_marginTop="13px"
        android:layout_marginLeft="53px"
        android:textColor="@color/white"
        />
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginLeft="33px"
        android:layout_below="@+id/tv_content"
        android:layout_marginRight="30px"
        android:layout_marginBottom="29px"
        android:layout_marginTop="31px"
        android:background="@drawable/normal_bg_white4"
        android:layout_height="wrap_content">
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/fl"
            android:layout_margin="24px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.ziran.meiliao.common.commonwidget.RoundImageView
                android:id="@+id/iv_item_sjk_act_img"
                android:layout_width="160px"
                app:roundimageview_type="round"
                app:roundimageview_borderRadius="10dp"
                android:layout_height="160px"
                app:layout_auto_baseheight="width"
                />
            <TextView
                android:id="@+id/tv_real"
                android:layout_width="100px"
                android:layout_marginTop="140px"
                android:text="真人"
                android:paddingTop="5px"
                app:layout_auto_baseheight="width|marginTop"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="5px"
                android:textSize="22px"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:background="@drawable/background_gradient"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:id="@+id/iv_item_sjk_act_label"
            android:layout_width="88px"
            android:layout_height="36px"
            android:text="热门"
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
            android:textSize="24px"
            android:textColor="@color/white"
            android:background="@drawable/normal_bg_orange"
            />
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/all_top"
            android:layout_toRightOf="@+id/fl"
            android:layout_marginTop="5px"
            android:layout_alignTop="@+id/fl"
            android:layout_marginRight="24px"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:paddingRight="10px"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="慈悲"
                android:textSize="36px"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxEms="9"
                android:textColor="#3E3E59"
                android:id="@+id/tv_name"
                />


            <ImageView
                android:id="@+id/iv_real_name"
                android:layout_toRightOf="@+id/tv_name"
                android:visibility="gone"
                android:layout_width="28px"
                android:layout_centerVertical="true"
                android:layout_height="32px"
                android:src="@mipmap/icon_real_name"
                />
            <ImageView
                android:id="@+id/iv_real_person"
                android:layout_toRightOf="@+id/iv_real_name"
                android:layout_width="28px"
                android:layout_marginLeft="8px"
                android:layout_height="32px"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_real_person"
                />
            <TextView
                android:id="@+id/tv_wszl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完善资料"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textSize="18px"
                android:paddingLeft="14px"
                android:layout_toLeftOf="@+id/iv_ws"
                android:paddingTop="5px"
                android:paddingBottom="5px"
                android:layout_marginRight="4px"
                android:textColor="#63BBFF"
                />

            <ImageView
                android:id="@+id/iv_ws"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_home_bule_right" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/all_info"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10px"
            android:layout_alignLeft="@+id/all_top"
            android:layout_below="@+id/all_top"
            android:layout_height="wrap_content">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/all_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10px"
                android:background="@drawable/normal_bg_bule_address"
                android:orientation="horizontal"
                android:paddingLeft="12px"
                android:paddingTop="10px"
                android:paddingRight="12px"
                android:paddingBottom="10px">

                <ImageView
                    android:id="@+id/iv_age"
                    android:layout_width="18px"
                    android:layout_height="20px"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_home_sex_man" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:text="22岁"
                    android:textColor="#459BFF"
                    android:textSize="24px" />
            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:id="@+id/tv_constellation"
                android:background="@drawable/normal_bg_gray_f7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:paddingLeft="12px"
                android:layout_marginRight="10px"
                android:paddingRight="12px"
                android:text="射手座"
                android:textColor="#474766"
                android:textSize="24px"
                />

            <TextView
                android:id="@+id/tv_height"
                android:background="@drawable/normal_bg_gray_f7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:paddingLeft="12px"
                android:layout_marginRight="10px"
                android:paddingRight="12px"
                android:text="185cm"
                android:textColor="#474766"
                android:textSize="24px"
                />
            <TextView
                android:id="@+id/tv_shape"
                android:background="@drawable/normal_bg_gray_f7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10px"
                android:paddingBottom="10px"
                android:paddingLeft="12px"
                android:paddingRight="12px"
                android:text="偏瘦"
                android:textColor="#474766"
                android:textSize="24px"
                />

        </com.zhy.autolayout.AutoLinearLayout>
        
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/all_data"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/all_info"
            android:layout_marginTop="14px"
            android:layout_alignLeft="@+id/all_info"
            android:layout_height="wrap_content">
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="50px"
                android:gravity="center"
                android:layout_marginRight="13px"
                android:background="@drawable/normal_bg_gray_fc"
                android:layout_height="50px">

                <ImageView
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:src="@mipmap/icon_no_data_add"
                    />

            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="50px"
                android:gravity="center"
                android:layout_marginRight="13px"
                android:background="@drawable/normal_bg_gray_fc"
                android:layout_height="50px">

                <ImageView
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:src="@mipmap/icon_no_data_add"
                    />

            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="50px"
                android:gravity="center"
                android:layout_marginRight="13px"
                android:background="@drawable/normal_bg_gray_fc"
                android:layout_height="50px">

                <ImageView
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:src="@mipmap/icon_no_data_add"
                    />

            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="50px"
                android:gravity="center"
                android:layout_marginRight="13px"
                android:background="@drawable/normal_bg_gray_fc"
                android:layout_height="50px">

                <ImageView
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:src="@mipmap/icon_no_data_add"
                    />

            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="50px"
                android:gravity="center"
                android:layout_marginRight="13px"
                android:background="@drawable/normal_bg_gray_fc"
                android:layout_height="50px">

                <ImageView
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:src="@mipmap/icon_no_data_add"
                    />

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="wrap_content"
            android:layout_marginTop="14px"
            android:layout_alignLeft="@+id/all_info"
            android:layout_below="@+id/all_info"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="26px"
            android:layout_marginTop="14px"
            android:text="个性签名个性签名个性签名个性签名..."
            android:maxEms="11"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#474766"
            android:layout_alignLeft="@+id/all_info"
            android:layout_below="@+id/all_info"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/all_num"
            android:layout_height="wrap_content"
            android:background="@drawable/normal_bg_read_7460"
            android:layout_alignBottom="@+id/fl"
            android:layout_alignLeft="@+id/tv_teacher_name"
            >

        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_remain"
            android:orientation="horizontal"
            android:layout_marginLeft="110px"
            android:layout_marginRight="40px"
            android:layout_alignBottom="@+id/fl"
            android:id="@+id/autoLinearLayout2">
        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoRelativeLayout>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="34px"
        android:layout_alignTop="@+id/tv_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30px"
        android:layout_height="34px"
        android:src="@mipmap/icon_home_close"
        />

</com.zhy.autolayout.AutoRelativeLayout>