<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl_tab"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/jmui_return_btn"
            android:layout_width="wrap_content"
            android:padding="30px"
            android:layout_height="wrap_content"
            android:background="@drawable/jmui_back_btn_bg"
            android:layout_centerVertical="true"
            android:src="@drawable/back"/>
        <com.ziran.meiliao.widget.RoundImageView
            android:id="@+id/iv_top_head"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            app:roun_type="circle"
            app:layout_auto_baseheight="width"
            android:layout_toRightOf="@+id/jmui_return_btn"
            />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/all_top"
            android:layout_toRightOf="@+id/iv_top_head"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15px"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_real_person"
                android:ellipsize="end"
                android:maxEms="8"
                android:maxLines="1"
                android:paddingRight="10px"
                android:textColor="#292832"
                android:textSize="26px"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/iv_real_name"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_width="24px"
                android:visibility="gone"
                android:layout_height="28px"
                android:src="@mipmap/icon_real_name"
                />
            <ImageView
                android:id="@+id/iv_real_person"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_width="24px"
                android:visibility="gone"
                android:layout_marginLeft="8px"
                android:layout_height="28px"
                android:src="@mipmap/icon_real_person"
                />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_toRightOf="@+id/iv_top_head"
                android:layout_below="@+id/tv_name"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/jmui_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="190dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="19sp"/>

            <TextView
                android:id="@+id/jmui_group_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_other"
            android:textSize="13sp"
            android:text="关注"
            android:gravity="center"
            android:layout_toLeftOf="@+id/jmui_right_btn"
            android:paddingLeft="20px"
            android:layout_marginTop="6px"
            android:paddingRight="20px"
            android:layout_centerVertical="true"
            android:textColor="#459BFF"
            android:paddingTop="8px"
            android:textStyle="bold"
            android:paddingBottom="8px"
            android:background="@drawable/normal_bg_bule_tran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/jmui_right_btn"
            android:padding="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/jmui_back_btn_bg"
            android:src="@drawable/jmui_chat_detail"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl"
        android:layout_below="@+id/arl_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </com.zhy.autolayout.AutoRelativeLayout>

    <com.ziran.meiliao.common.irecyclerview.IRecyclerView
        android:id="@+id/recyclerView"
        android:layout_below="@+id/arl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/all_bottom"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
<ImageView
    android:id="@+id/iv_give_gift"
    android:layout_width="300px"
    android:layout_height="118px"
    android:visibility="gone"
    android:layout_marginLeft="25px"
    android:layout_marginRight="25px"
    android:src="@mipmap/icon_git_home"
    />
        <ImageView
            android:id="@+id/iv_chat"
            android:layout_width="300px"
            android:visibility="gone"
            android:layout_marginRight="25px"
            android:layout_marginLeft="25px"
            android:layout_height="118px"
            android:src="@mipmap/icon_chat_home"
            />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>
