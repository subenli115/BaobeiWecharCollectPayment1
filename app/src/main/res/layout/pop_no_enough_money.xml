<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/normal_bg_white60"
    android:layout_gravity="center"
    >


<com.zhy.autolayout.AutoRelativeLayout
    android:id="@+id/rl_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">
<com.zhy.autolayout.AutoLinearLayout
    android:id="@+id/ll"
    android:layout_width="600px"
 android:gravity="center_horizontal"
    android:layout_centerHorizontal="true"
    android:background="@drawable/normal_bg_white60"
    android:orientation="vertical"
    android:layout_height="560px">
<com.zhy.autolayout.AutoFrameLayout
    android:layout_width="wrap_content"
    android:layout_marginTop="80px"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ML币不足"
        android:textSize="56px"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
</com.zhy.autolayout.AutoFrameLayout>

<com.zhy.autolayout.AutoLinearLayout
android:gravity="center_horizontal"
    android:layout_marginTop="56px"
    android:layout_marginLeft="61px"
    android:layout_marginRight="61px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView

        android:id="@+id/tv_update_version_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="为了保证用户体验，每发送一条消息给女性用户，将消耗10ML币，加好友后发消息不消耗ML币。"
        android:textColor="@color/black"
        android:textSize="30px"
        />
</com.zhy.autolayout.AutoLinearLayout>
<com.zhy.autolayout.AutoLinearLayout
    android:layout_marginTop="65px"
    android:layout_width="match_parent"
    android:paddingLeft="60px"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/tv_receive"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:layout_marginRight="40px"
        android:text="免费领取"
        android:visibility="gone"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        android:textSize="30px"
        android:gravity="center"
        android:background="@drawable/normal_bg_red"
        />

    <TextView
        android:id="@+id/tv_recharge"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginRight="60px"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:text="充值金币"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        android:textSize="30px"
        android:gravity="center"
        android:background="@drawable/normal_bg_bule"
        />
</com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>