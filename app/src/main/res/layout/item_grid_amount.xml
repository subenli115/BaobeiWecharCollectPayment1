<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_recharge_bg"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:background="@drawable/normal_bg_white_vertical"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            >

            <ImageView
                android:id="@+id/iv_gold"
                android:layout_marginTop="13.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_recharge_gold"
                />
            <TextView
                android:id="@+id/tv_recharge_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:layout_marginTop="11.5dp"
                android:textColor="#4D4D4D"
                android:text="1100金币"
                android:layout_below="@+id/tv_recharge_amount"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_recharge_amount"
                android:layout_width="69dp"

                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="17dp"
                android:background="@drawable/normal_bg_orange_44"
                android:paddingTop="4dp"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:text="￥2008"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>